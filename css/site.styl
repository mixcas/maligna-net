@import "sanitize"
@import "helpers"

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 17px
$font-leading-basic = 1.4
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

// TYPOGRAPHY

body
  font-family: 'Oswald', helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic
  color: $color-white-soft
  font-weight: 300

h1
  font-size: 3em

h2
  font-size: 2em
  margin-bottom: 15px
  line-height: 1

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a,a:active,a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

article
  margin-bottom: 60px

#vid-bg
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: -1

  video
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    min-height: 100%
    min-width: 100%

img
  max-width: 100%
  height: auto

#main-container
  display: flex
  flex-flow: row nowrap
  padding: 30px 15px
  max-width: 1080px

#sidebar-1
  padding: 0 15px
  flex: 0 0 210px
  order: 1
  max-height: 100vh

#sidebar-2
  padding: 0 15px
  flex: 0 0 210px
  order: 2

#main-content
  padding: 0 15px
  flex-grow: 1
  order: 3

//the 100% widths are just so stylus can compile delete as desired

// HEADER

#header
  width: 100%

nav a
  display: block

#logo
  max-width: 100%
  max-height: 300px


// POSTS LOOP
#posts
  width: 100%

.post
  width: 100%

#pagination
  width: 100%

.release-thumb
  margin-bottom: 15px

// Blog
.blog 
  h2:after
    content: attr(data-date)
    padding-left: 15px
    font-size: 0.5em
    font-weight: 100
    vertical-align: baseline

// FOOTER

#footer
  width: 100%

// Single
.attachment-single-featured
  display: block
  margin-bottom: 15px

// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%


@media screen and (max-width: 800px)
  #main-container
    flex-flow: column

  #sidebar-1
    flex: 0 1 auto
    order: 1

  #sidebar-2
    flex: 410px 1 auto
    order: 2
    overflow: visible

  #main-content
    order: 3

@media screen and (max-width: 414px)
  #header
    display: flex

  #main-container
    padding: 0 5px

  #sidebar-1
    flex: 0 1 auto
    order: 1

  #sidebar-2
    flex: 0 1 auto
    order: 3
    overflow: visible

  #main-content
    flex: 0 1 auto
    padding: 0 15px
    flex-grow: 1
    order: 2
    
  .release-thumb 
    a
      display: block

    img
      width: 100%
